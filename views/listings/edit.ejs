<% layout("/layouts/boilerplate") %>
<body>
    <h1>Edit Details</h1>
    <form method="POST" action="/listings/<%-listing._id %>?_method=PUT">
        <div class="row col-8">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input name="title" type="text" value='<%-listing.title %>' class="form-control"></input>
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" name="description" value='<%-listing.description %>' class="form-control"></input>
            </div>

            <div class="mb-3">
                <label class="form-label">Price</label>
                <input type="number" name="price" value=<%-listing.price %> class="form-control"></input>
            </div>

            <div class="mb-3">
                <label class="form-label">Image</label>
                <input type="text" name="image" value="<%-listing.image %>" class="form-control"></input>
            </div>

            <div class="mb-3">
                <label class="form-label">Location</label>
                <input type="text" name="location" value="<%-listing.location %>" class="form-control"></input>
            </div>

            <div class="mb-3">
                <label class="form-label">Country</label>
                <input type="text" name="country" value="<%-listing.country %>" class="form-control"></input>
            </div>
        </div>
        <button type="submit" class="button">ADD</button>
    
    </form>
</body>
</html>